programa {
  funcao inicio() {
    inteiro numero
    escreva("Digite o numero")
    leia(numero)
    escolha(numero){
      caso 1:
        escreva("Domingo")
      pare
      caso 2:
        escreva("Segunda")
      pare
      caso 3:
        escreva("Terça")
      pare
      caso 4:
        escreva("Quarta")
      pare
      caso 5:
        escreva("Quinta")
      pare
      caso 6:
        escreva("Sexta")
      pare
      caso 7:
        escreva("Sábado")
      pare
    }
  }
}
